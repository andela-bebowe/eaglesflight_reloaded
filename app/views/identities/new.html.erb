<%provide(:title, "Sign up")%>
<div class="align">
  <h2 class="text-center">Sign up</h2>
  <div class="form-wrapper">
    <%= form_tag "/auth/identity/register", class:"form-horizontal"%>
      <%= render "layouts/errors", object: @identity %>
      <div class="form-group">
        <%= label_tag :name, "Name", class:"control-label"%>
        <div class="col-md-9">
          <%= text_field_tag :name, @identity.try(:name), class:"form-control", placeholder:"Blessing Ebowe"%>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :email, "Email", class:"control-label"%>
        <div class="col-md-9">
          <%= text_field_tag :email, @identity.try(:email), class:"form-control", placeholder:"eaglesflight@gmail.com"%>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Password", class:"control-label" %>
        <div class="col-md-9">
          <%= password_field_tag :password, "", class:"form-control", placeholder:"************"%>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password_confirmation, "Confirm Password", class:"control-label" %>
        <div class="col-md-9">
          <%= password_field_tag :password_confirmation, "", class:"form-control", placeholder:"************"%>
        </div>
      </div><br/>
      <div class="form-group col-md-4" id="mybutton">
        <button class="btn btn-block btn-social btn-mine" type="submit"></i>Sign up</button>
        <p>OR</p>
      </div>
      <div class="form-group col-md-4" id="mybutton">
        <%= link_to "Login", login_path, class:"btn btn-block btn-social btn-mine"%>
      </div>
  </div>
</div>
