<%provide(:title, "Sign up")%>
<div class="row">
  <div class="col-md-4">
    <a href="/auth/twitter" class="btn btn-block btn-social btn-twitter">
        <i class="fa fa-twitter"></i> Sign in with Twitter
    </a>
    <br/>
    <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook">
        <i class="fa fa-facebook"></i> Sign in with Facebook
    </a>
    <br/>
    <p>
      <strong>Don't want to use these services?</strong>
      <a href="<%=signup_path%>" class="btn btn-block btn-social btn-mine">
        <i class="fa fa-fighter-jet"></i>Create an account with Eagles Flight.
      </a>
    </p>
  </div>
  <div class="col-md-6 col-md-offset-1">
    <%= form_tag "/auth/identity/callback" do %>
      <div class="field">
        <%= label_tag :auth_key, "Email" %><br>
        <%= text_field_tag :auth_key %>
      </div>
      <div class="field">
        <%= label_tag :password %><br>
        <%= password_field_tag :password %>
      </div>
      <div class="actions"><i class="fa fa-sign-in"><%= submit_tag "Login" %></div>
    <% end %>
  </div>
</div>
