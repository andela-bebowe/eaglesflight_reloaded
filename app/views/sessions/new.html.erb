<%provide(:title, "Sign in")%>
<div class="align">
  <h2 class="text-center">Sign In</h2>
  <div class="form-wrapper">
    <div class="row">
      <div class="col-md-6">
        <a href="/auth/twitter" class="btn btn-block btn-social btn-twitter">
            <i class="fa fa-twitter"></i> Sign in with Twitter
        </a>
        <br/>
        <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook">
            <i class="fa fa-facebook"></i> Sign in with Facebook
        </a>
        <br/>
        <p>
          <strong>Don't want to use these services?</strong>
          <a href="<%=new_identity_path%>" class="btn btn-block btn-social btn-mine">
            <i class="fa fa-fighter-jet"></i>Create an Eagles Flight account.
          </a>
        </p>
      </div>
      <div class="col-md-6">
        <%= form_tag "/auth/identity/callback", class:"form-horizontal" do %>
        <%= render "layouts/errors", object: @identity %>
          <div class="form-group">
            <%= label_tag :auth_key, "Email" %>
            <div class="col-md-9">
              <%= email_field_tag :auth_key, "", placeholder:"Enter Email", class:"form-control"%>
            </div>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <div class="col-md-9">
              <%= password_field_tag :password, "", placeholder:"Enter Password", class:"form-control" %>
            </div>
          </div>
          <div class="col-md-10 login">
            <p>
            <strong>Registered? Log in here.</strong>
            <button class="btn btn-block btn-social btn-mine text-center" type="submit"><i class="fa fa-sign-in"></i>Login</button>
          </p>
          </div>
        </div>
      <% end %>
      </div>
    </div>
</div>
