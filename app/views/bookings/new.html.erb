<%provide(title: "Booking")%>
<h2 class="text-center">Booking Form</h2>

<div form-wrapper>

<h2 class="text-center">Passenger Details</h2>
<div class="form-wrapper">
  <%= render "layouts/errors", object: @passenger %>
  <%= f.fields_for @passenger do |f| %>
    <div class="form-group">
      <%= f.label :name, "Passenger Name", class:"control-label"%>
      <%= f.text_field :name, class: "form-control", placeholder:"Blessing Ebowe"%>
    </div>
    <div class="form-group">
      <%= f.label :email, "Passenger Email", class:"control-label"%>
        <%= f.email_field :email, class:"form-control", placeholder:"eaglesflight@gmail.com"%>
      </div>
    </div>
  <% end %>%>
</div>
