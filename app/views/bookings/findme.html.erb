<%=form_tag find_path, method: :get, class:"form-horizontal findme form-wrapper" do%>
  <div class="form-group">
    <%=label_tag :id, "Booking Id", class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%=number_field_tag :id, placeholder:"23", class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <%=label_tag :ticket_no, "Ticket No", class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%=number_field_tag :ticket_no, placeholder:"19", class: "form-control"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-mine">Find Booking</button>
    </div>
  </div>
<%end%>
