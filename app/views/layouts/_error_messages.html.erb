<% if @user.errors.any? %>
<div class="error-explanation">
	<div class="alert alert-danger">
	<h4>Form contains <%= pluralize(@user.errors.count, "error") %>.</h4>
	</div>
	<ul class="list-group">
		 <% @user.errors.full_messages.each do |msg| %>
	<li class="list-group-item list-group-item-danger"><%= msg %></li>
	<% end %>
	</ul>
</div>
<% end %>
