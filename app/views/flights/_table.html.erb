<table class="table table-hover table-responsive">
  <thead>
  <tr>
      <th>Pick</th>
      <th>Airlines</th>
      <th>Departure</th>
      <th>Destination</th>
      <th>Date</th>
      <th>Time</th>
      <th>Price for 1</th>
  </tr>
</thead>
  <tbody>
        <%flights.each do |flight|%>
        <tr>
          <td><%=radio_button_tag :flight_id, flight.id %></td>
          <td><%=flight.airline%></td>
          <td><%=flight.departure%></td>
          <td><%=flight.destination%></td>
          <td><%=date(flight)%></td>
          <td><%=time(flight)%></td>
          <td><%=get_cost(flight, num)%></td>
        </tr>
        <% end %>
  </tbody>
</table>
